doctype html
html
  head
    title= pageTitle
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x', crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="/stylesheets/login.css")
  body
    
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-5
      .container-fluid
        a.navbar-brand(href='/') BrainDump
        #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item
            a.nav-link.active(aria-current='page', href='/') Home
          if userLoggedIn
            li.nav-item
              a.nav-link(href='/tareas') Tareas
            li.nav-item
              a.nav-link(href='/listas') Listas
      .loginBtn
        if userLoggedIn
          a.btn.btn-outline-info(href='/logout') Salir
        else 
          a.btn.btn-outline-info(href='/login') Ingresar

    block content

    block scripts 
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>